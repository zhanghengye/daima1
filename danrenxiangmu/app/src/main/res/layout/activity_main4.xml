<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    >
    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="128px">

        <ImageView
            android:id="@+id/mImg4"
            android:layout_width="13px"
            android:layout_height="24px"
            android:layout_marginLeft="30px"
            android:layout_marginTop="70px"
            android:src="@mipmap/nav_btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="344px"
            android:layout_marginTop="71px"
            android:text="重置密码"
            android:textSize="32px" />

        <View
            android:background="#747474"
            android:layout_width="match_parent"
            android:layout_height="1px" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="331px"
            android:layout_height="45px"
            android:layout_marginLeft="60px"
            android:layout_marginTop="262px"
            android:text="输入短信验证码"
            android:textSize="48px" />

        <TextView
            android:layout_width="427px"
            android:layout_height="29px"
            android:layout_marginLeft="59px"
            android:layout_marginTop="338px"
            android:text="短信验证码发送至188 1122 2233"
            android:textSize="28px" />

        <RelativeLayout
            android:id="@+id/relative_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="541px">

            <EditText
                android:id="@+id/one1"
                android:layout_marginLeft="60px"
                android:layout_width="100px"
                android:numeric="integer"
                android:maxLength="1"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/er1"
                android:layout_marginLeft="220px"
                android:layout_width="100px"
                android:numeric="integer"
                android:maxLength="1"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/san1"
                android:layout_marginLeft="380px"
                android:layout_width="100px"
                android:numeric="integer"
                android:maxLength="1"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/si1"
                android:layout_marginLeft="540px"
                android:layout_width="100px"
                android:numeric="integer"
                android:maxLength="1"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <TextView
            android:id="@+id/chongxin2"
            android:layout_below="@+id/relative_edittext"
            android:layout_marginLeft="57px"
            android:layout_marginTop="50px"
            android:textSize="24px"
            android:text="重新获取验证码"
            android:layout_width="165px"
            android:layout_height="23px" />

        <Button
            android:id="@+id/mYanZheng"
            android:layout_width="634px"
            android:layout_height="90px"
            android:layout_below="@+id/mText"
            android:layout_marginTop="66px"
            android:layout_marginLeft="58px"
            android:text="验证"
            android:textColor="#fff"
            android:textSize="34px"
            android:background="@drawable/anniu"/>
    </RelativeLayout>


</RelativeLayout>
