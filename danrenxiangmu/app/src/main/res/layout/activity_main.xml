<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    >

    <ImageView
        android:layout_width="14px"
        android:layout_height="24px"
        android:layout_marginLeft="30px"
        android:layout_marginTop="70px"
        android:src="@mipmap/nav_btn_back" />

    <TextView
        android:layout_width="126px"
        android:layout_height="31px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70px"
        android:text="登陆注册"
        android:textSize="32px" />

    <ImageView
        android:layout_width="160px"
        android:layout_height="160px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="228px"
        android:src="@mipmap/icon_jg" />

    <EditText
        android:id="@+id/mName"
        android:layout_width="466px"
        android:layout_height="31px"
        android:hint="请输入手机号"
        android:textColorHint="#ffdbdbdb"
        android:textSize="32px"
        android:background="@null"
        android:layout_marginTop="490px"
        android:layout_marginLeft="55px"/>



    <View
        android:layout_width="638px"
        android:layout_height="2px"
        android:background="#DADADA"
        android:layout_marginLeft="57px"
        android:layout_marginTop="570px"
        />

    <Button
        android:id="@+id/mButton"
        android:layout_width="634px"
        android:layout_height="90px"
        android:layout_marginLeft="58px"
        android:layout_marginTop="656px"
        android:background="@drawable/anniu"
        android:text="下一步"
        android:textColor="#ffffff"
        android:textSize="34px" />

    <ImageView
        android:id="@+id/homeImageView"
        android:layout_width="26px"
        android:layout_height="26px"
        android:layout_marginLeft="190px"
        android:layout_marginTop="1228px"
        android:src="@mipmap/icon_agree" />

    <LinearLayout
        android:layout_width="335px"
        android:layout_height="26px"
        android:layout_marginLeft="226px"
        android:layout_marginTop="1229px"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/homeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登陆代表您已同意"
            android:textSize="24px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/homeImageView"
            android:text="竞购用户协议"
            android:textColor="#FFFF0127"
            android:textSize="24px" />


    </LinearLayout>


</RelativeLayout>
